<h1>Sign Up Confirmation</h1>

<div class="row">
  <div class="col-md-4">
    <h4>Are you sure these values are correct?</h4>
    <p>Email <%= @user.email %></p>
    <Name <%= @user.name %></p>
  </div>

  <div class="col-md-4">
    <%= button_to "Yes", {:controller => "users", :action => "create", :params => params}, class: 'btn btn-success' %>
    <%= button_to "No", {:controller => "users", :action => "new", :params => params}, class: 'btn btn-danger' %>
  </div>
</div>
